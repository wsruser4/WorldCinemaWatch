<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity"
    tools:deviceIds="wear"
    android:padding="8dp"
    android:backgroundTint="#332973">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="18dp"
            android:textColor="#fff"
            android:paddingLeft="16dp"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ichat"
            android:background="@drawable/circl"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/obsu"
            android:textSize="14dp"
            android:textColor="#fff"
            android:paddingLeft="8dp"
            android:layout_marginTop="95dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ilist"
            android:background="@drawable/circl"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/podb"
            android:textSize="14dp"
            android:textColor="#fff"
            android:paddingLeft="8dp"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="90dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icerd"
            android:background="@drawable/circl"
            android:padding="16dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/izbran"
            android:textSize="14dp"
            android:textColor="#fff"
            android:paddingLeft="14dp"
            android:layout_marginTop="190dp"/>


    </FrameLayout>



</androidx.wear.widget.BoxInsetLayout>

